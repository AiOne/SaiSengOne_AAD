<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background7"
    tools:context=".BookingSystem.BookingForm">
    <TextView
        android:id="@+id/placePickerTitle"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plese fill the booking form"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:stretchColumns="1">
        <TableRow
            android:padding="10dp">
            <TextView
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Place"
                android:padding="10dp"/>
            <Spinner
                android:id="@+id/spinnerSource"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp" />
        </TableRow>
        <TableRow
            android:padding="10dp">
            <TextView
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:padding="10dp"/>
            <Spinner
                android:id="@+id/spinnerDestination"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:padding="10dp" />
        </TableRow>
        <TableRow
            android:padding="20dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:text="Date"/>
                <DatePicker
                    android:id="@+id/dateBooking"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:padding="10dp"
                    />
        </TableRow>
        <TableRow
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routine"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <RadioGroup
                    android:id="@+id/routeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RadioButton
                        android:id="@+id/routeMorning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Morning"/>
                    <RadioButton
                        android:id="@+id/routeNight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Night"/>
                </RadioGroup>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6F00FF"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:theme="@style/Widget.AppCompat.Button.Colored"
        android:onClick="next"
        android:text="Next"/>
</LinearLayout>